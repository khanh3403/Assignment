<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/style_layout_middle"
        android:gravity="center"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/tv_setting_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textSize="20dp"
              android:text="Usernaem" />
          <TextView
              android:id="@+id/tv_setting_email"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textSize="15dp"
              android:text="Usernaem" />
      </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="50dp"

        android:orientation="vertical">
        <Button
            android:id="@+id/btn_setting_changepass"
            android:background="@drawable/style_layout_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Đổi mật khẩu"/>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_setting_logout"
            android:background="@drawable/style_layout_middle"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:backgroundTint="@color/main_red"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-600dp"
        android:background="@drawable/boder_radius_avatar"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_setting_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/boder_radius_avatar"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:src="@drawable/avatar" />

    </LinearLayout>

</LinearLayout>
