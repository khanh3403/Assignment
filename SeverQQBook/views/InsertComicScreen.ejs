<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Insert</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      body {
        background-image: url("https://img.pikbest.com/templates/20240706/fruit-fruit-banner-for-supermarket-store-green-background_10654794.jpg!w700wp");
        background-size: cover;
        background-repeat: no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }

      .container {
        margin-top: 250px;
        background-color: rgba(
          255,
          255,
          255,
          0.8
        ); /* Màu nền với độ trong suốt */
        padding: 20px;
        border-radius: 10px; /* Bo viền */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Đổ mờ */
        width: 80%; /* Độ rộng của khung chứa form */
      }

      .container h1 {
        margin-bottom: 20px;
      }

      .form-group {
        margin-bottom: 20px;
      }
    </style>
  </head>

  <body>
    <%- include('../views/Navbar.ejs') -%>
    <div class="container">
      <h1 class="pagination justify-content-center">THÊM SẢN PHẨM</h1>
      <form
        id="insertComic"
        class="was-validated"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="name" class="form-label">TÊN SẢN PHẨM:</label>
          <input
            type="text"
            class="form-control"
            id="name"
            placeholder="Enter your name ..."
            name="name"
            required
          />
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
          <label for="description" class="form-label">MÔ TẢ:</label>
          <input
            type="text"
            class="form-control"
            id="description"
            placeholder="Enter your description..."
            name="description"
            required
          />
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
          <label for="price" class="form-label">GIÁ:</label>
          <input
            type="number"
            class="form-control"
            id="price"
            placeholder="Enter your price..."
            name="price"
            required
          />
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
          <label for="author" class="form-label">NGUỒN GỐC:</label>
          <input
            type="text"
            class="form-control"
            id="author"
            placeholder="Enter your author..."
            name="author"
            required
          />
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="mb-3 mt-3">
          <label for="type" class="form-label">LOẠI HÀNG:</label>
          <select
            class="form-select"
            aria-label="Default select example"
            name="type"
          >
            <option value="Trái cây không hạt">Trái cây không hạt</option>
            <option value="Trái cây có hạt">Trái cây có hạt</option>
            <option value="Trái cây miền nam">Trái cây miền nam</option>
            <option value="Trái cây miền bắc">Trái cây miền bắc</option>
          </select>
        </div>
        <div class="form-group">
          <label for="publishYear" class="form-label">HẠN SỬ DỤNG:</label>
          <input
            type="text"
            class="form-control"
            id="publishYear"
            placeholder="Enter your publishYear..."
            name="publishYear"
            required
          />
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <div class="form-group">
          <label for="coverImage" class="form-label">HÌNH ẢNH:</label>
          <input
            type="file"
            class="form-control"
            id="coverImage"
            placeholder=".coverImage..."
            name="coverImage"
            required
            multiple
          />
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
          <label for="avatar" class="form-label">ẢNH CHI TIẾT:</label>
          <input
            type="file"
            class="form-control"
            id="images"
            placeholder=".images..."
            name="images"
            required
            multiple
          />
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <button
          type="submit"
          class="btn btn-primary d-block mx-auto"
          style="width: 200px"
        >
          THÊM 
        </button>
      </form>
    </div>
    <script>
      try {
        const SubmitSignUp = document.getElementById("insertComic");

        SubmitSignUp.addEventListener("submit", (event) => {
          event.preventDefault();
          var form = document.getElementById("insertComic");
          var formData = new FormData(form);

          fetch("/comic/post", {
            method: "POST",
            body: formData,
          })
            .then((response) => {
              console.log(response);
              if (response.status == 200) {
                alert("Insert successfully !!!");
                window.location.href = "/comic";
              } else {
                alert("Insert failed already exists");
              }
            })
            .then((data) => {
              console.log(data);
            })
            .catch((err) => {
              console.log(err);
            });
        });
      } catch (error) {
        console.log(error);
      }
    </script>
  </body>
</html>
